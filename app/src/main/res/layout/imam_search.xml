<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/first_Tab"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/lightgray">


        <SearchView
            android:id="@+id/Search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:hint="ادخل كلمة البحث">
        </SearchView>

        <EditText
            android:id="@+id/TestSeach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_gravity="right"
            android:hint="أدخل كلمة البحث"
            android:inputType="textPersonName"
             />

       <!-- <TextView
            android:id="@+id/TestSeach"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:hint="ادخل كلمة البحث" />
-->
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:layout_gravity="right">

            <TableRow >

                <Spinner
                    android:id="@+id/myspinner"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:spinnerMode="dialog"
                    >

                </Spinner>

                <TextView

                    android:id="@+id/simpleTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="18dip"
                    android:text="@string/MosqueRegion"
                    android:textColor="#fff"
                    android:textSize="12dp" />


            </TableRow>



            <TableRow>

                <Spinner
                    android:layout_marginTop="8dp"
                    android:id="@+id/spinnerCities"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog">

                </Spinner>
                <TextView

                    android:id="@+id/simpleTextView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="18dip"
                    android:text="@string/CityVillage"
                    android:textColor="#fff"
                    android:textSize="12dp"/>

            </TableRow>


            <TableRow>
                <Spinner
                    android:layout_marginTop="8dp"
                    android:id="@+id/spinnerDistricts"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:spinnerMode="dialog">

                </Spinner>

                <TextView

                    android:id="@+id/simpleTextView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    android:padding="18dip"
                    android:text="@string/District"
                    android:textColor="#fff"
                    android:textSize="12dp" />





            </TableRow>

        </TableLayout>



    </LinearLayout>
</RelativeLayout>