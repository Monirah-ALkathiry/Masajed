<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:context="com.apps.noura.masajd.Mosque.MosqueInformationActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    <RelativeLayout
        android:id="@+id/MosqueNaem"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/MosqueNaem2"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="ObsoleteLayoutParam">

            <TextView
                android:id="@+id/MasijedNameTag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/Text_name_Tag"
                android:textColor="#000"
                android:typeface="sans"
                tools:layout_margin="2dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                 />

        <TextView
            android:id="@+id/MasijedName"
            android:layout_width="100pt"
            android:layout_height="wrap_content"
            android:text="@string/Text_name"
            android:textColor="#000"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:textSize="20sp"
            android:lines="2"
            android:maxLines="2"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:typeface="sans"
            android:layout_below="@id/MasijedNameTag"/>



        </LinearLayout>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/MosqueNaem"
            tools:ignore="RtlHardcoded">



            <LinearLayout
                android:id="@+id/MosqueImageTag"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal"
                android:paddingBottom="30dp"
                android:paddingRight="20dp"
                android:paddingTop="20dp"
                tools:ignore="RtlHardcoded,RtlSymmetry">



                <TextView
                    android:id="@+id/MosquNationalCode"
                    android:gravity="center_vertical|left"
                    android:layout_gravity="center"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:text="@string/Null"
                    android:layout_centerVertical="true"
                    tools:ignore="ObsoleteLayoutParam,RtlHardcoded"/>

                <ImageView
                    android:id="@+id/MosqueImage"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:scaleType="centerCrop"
                    android:gravity="end"
                    android:src="@drawable/mosque_detail_icon"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:padding="2dp"/>



            </LinearLayout>
        </RelativeLayout>




    </RelativeLayout>



