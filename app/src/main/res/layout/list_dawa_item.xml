<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1.5dp"
    android:background="@drawable/border_style"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <ImageView
            android:id="@+id/DawaImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            tools:padding="2dp"
            android:radius="15dp"
            android:contentDescription="@string/DawaImage"
            />

        <TextView
            android:id="@+id/DawaName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin=".5dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="end"
            android:padding="2dp"
            android:paddingBottom="2dp"
            android:paddingRight="5dp"
            android:text="اسم المنشط "
            android:textAlignment="textEnd"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DawaInfo"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="right"
            android:paddingBottom="5dp"
            android:text="معلومات المنشط"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />
*
        <TextView
            android:id="@+id/DawaDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="15dp"
            android:layout_weight="1"
            android:gravity="left"
            android:text="@string/District"
            android:textColor="@color/colorPrimary"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/Distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|fill_vertical"
            android:layout_margin="2dp"
            android:layout_marginBottom="5.5dp"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="1.5dp"
            android:text="@string/MosqueDistance"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp" />

    </android.support.v7.widget.CardView>
</LinearLayout>


