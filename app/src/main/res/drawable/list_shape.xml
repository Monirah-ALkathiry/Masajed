<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <corners
        android:radius="5dp"
        />
    <gradient
        android:angle="45"
        android:centerX="8%"
        android:centerColor="@color/lightgray"
        android:startColor="#FCFCFC"
        android:endColor="@color/lightgray"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <size
        android:width="90dp"
        android:height="40dp"
        />
    <stroke
        android:width=".5dp"
        android:color="@color/white"
        />
</shape>